services:
  nekospace.api:
    build:
      context: C:\Users\Niko\source\repos\NekoSpaceList
      dockerfile: NekoSpaceList/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: NekoSpace.API
      target: base
    container_name: nekospace.api
    depends_on:
      postgres_image:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages
    image: nekospaceapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages  "/app/bin/Debug/net6.0/NekoSpace.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 5009
      target: 80
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\Users\Niko\source\repos\NekoSpaceList\NekoSpaceList:/app:rw
    - C:\Users\Niko\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Niko\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Niko\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Users\Niko\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\Niko\source\repos\NekoSpaceList:/src:rw
  postgres_image:
    environment:
      POSTGRES_DB: anilist_db
      POSTGRES_PASSWORD: mya
      POSTGRES_USER: neko
    image: postgres:latest
    networks:
      dockerapi-dev: {}
    ports:
    - published: 5432
      target: 5432
    restart: always
    volumes:
    - pgconf:/etc/postgresql:rw
    - pgdata:/var/lib/postgresql/data:rw
    - pglog:/var/log/postgresql:rw
version: '3.4'
volumes:
  pgconf:
    driver: local
  pgdata:
    driver: local
  pglog:
    driver: local