services:
  nekospace.api:
    build:
      context: C:\Users\Niko\source\repos\NekoSpaceList
      dockerfile: NekoSpaceList/Dockerfile
    container_name: nekospace.api
    depends_on:
      postgres_db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: nekospaceapi
    ports:
    - published: 5009
      target: 80
    - target: 80
    - target: 443
    volumes:
    - C:\Users\Niko\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Niko\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  postgres_db:
    environment:
      POSTGRES_DB: anilist_db
      POSTGRES_PASSWORD: mya
      POSTGRES_USER: neko
    image: postgres:latest
    ports:
    - published: 5434
      target: 5432
    restart: always
    volumes:
    - pgconf:/etc/postgresql:rw
    - pgdata:/var/lib/postgresql/data:rw
    - pglog:/var/log/postgresql:rw
version: '3.4'
volumes:
  pgconf:
    driver: local
  pgdata:
    driver: local
  pglog:
    driver: local